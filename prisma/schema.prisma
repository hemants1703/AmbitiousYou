generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(cuid())
  firstName    String
  lastName     String
  email        String      @unique
  passwordHash String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  Ambitions    Ambitions[]
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum TrackingMethod {
  TASKS
  MILESTONES
}

enum AmbitionStatus {
  ACTIVE
  COMPLETED
  INACTIVE
  ARCHIVED
}

model Ambitions {
  id                   String         @id @default(cuid())
  userId               String
  title                String
  description          String
  category             String
  priority             Priority
  deadline             DateTime
  themeColor           String
  trackingMethod       TrackingMethod
  timeTrackingStart    DateTime
  timeTrackingEnd      DateTime
  timeTrackingDuration Int
  timeTrackingUnit     String
  timeTrackingStatus   String
  status               AmbitionStatus // Status of Ambitions - Active, Completed, Inactive, Archived etc.
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  // Relation to User
  user       User                 @relation(fields: [userId], references: [id])
  tasks      AmbitionTasks[]
  milestones AmbitionMilestones[]
  notes      AmbitionNotes[]
}

model AmbitionTasks {
  id          String   @id @default(cuid())
  ambitionId  String
  task        String
  description String
  completed   Boolean
  deadline    DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation to Ambitions
  ambition Ambitions @relation(fields: [ambitionId], references: [id])
}

model AmbitionMilestones {
  id          String   @id @default(cuid())
  ambitionId  String
  milestone   String
  description String
  completed   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation to Ambitions
  Ambitions Ambitions? @relation(fields: [ambitionId], references: [id])
}

model AmbitionNotes {
  id         String   @id @default(cuid())
  ambitionId String
  note       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relation to Ambitions
  Ambitions Ambitions? @relation(fields: [ambitionId], references: [id])
}

